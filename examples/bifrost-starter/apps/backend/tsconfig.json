{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "helpers/*": [
        "src/helpers/*"
      ],
      "auth/*": [
        "src/modules/auth/*"
      ],
      "modules/*": [
        "src/modules/*"
      ],
      "decorators/*": [
        "src/decorators/*"
      ],
      "testUtils/*": [
        "src/testUtils/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/migration",
    "src/datasource.ts",
    "src/datasource.options.ts"
  ]
}
