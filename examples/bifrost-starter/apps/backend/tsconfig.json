{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "helpers/*": [
        "helpers/*"
      ],
      "auth/*": [
        "modules/auth/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "decorators/*": [
        "decorators/*"
      ],
      "testUtils/*": [
        "testUtils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/migration",
    "src/datasource.ts""src/datasource.options.ts"
  ]
}
