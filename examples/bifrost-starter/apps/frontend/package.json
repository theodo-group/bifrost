{
  "name": "@bifrost-starter/frontend",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "next build",
    "build:analyze": "DEV_ANALYZE_BUNDLE=true next build",
    "build:analyze:bundlesize": "cd ../.. && pnpm build --filter=@bifrost-starter/frontend && cd - && bundlesize",
    "dev": "./gen_env.sh local && next dev --turbo -p 3000",
    "lint": "eslint --cache --cache-location .next/cache/eslint/ './**/*.{js,ts,tsx}'",
    "lint:fix": "pnpm lint --fix",
    "lint:style": "stylelint './**/*.module.css'",
    "lint:style:fix": "stylelint --fix './**/*.module.css'",
    "postinstall": "test -f .env.local || (test -f .env.sample && cp .env.sample .env.local || echo -e \"\\e[33mNo env file initialized\\e[0m\")",
    "start": "./gen_env.sh production && next start",
    "test": "jest",
    "test:circular": "pnpm depcruise --validate .dependency-cruiser.js pages --ignore-known",
    "test:coverage": "pnpm test -- --coverage",
    "test:type": "pnpm build"
  },
  "dependencies": {
    "@bifrost-starter/interfaces": "workspace:*",
    "axios": "0.27.2",
    "axios-auth-refresh": "3.3.6",
    "client-only": "^0.0.1",
    "jwt-decode": "3.1.2",
    "next": "14.0.4",
    "next-intl": "^3.3.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.1",
    "server-only": "^0.0.1",
    "sharp": "0.32.6",
    "swr": "2.2.4"
  },
  "devDependencies": {
    "@axe-core/react": "4.7.3",
    "@next/bundle-analyzer": "14.0.4",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.5.2",
    "@types/jest-axe": "3.5.5",
    "@types/node": "17.0.25",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "bundlesize2": "0.0.31",
    "dependency-cruiser": "15.5.0",
    "dependency-cruiser-config-custom": "workspace:*",
    "eslint-config-custom": "workspace:*",
    "jest": "29.5.0",
    "jest-axe": "6.0.0",
    "jest-environment-jsdom": "29.5.0",
    "prettier": "2.8.8",
    "stylelint": "14.11.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "28.0.0",
    "stylelint-declaration-strict-value": "1.9.2",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "typescript": "5.1.3"
  },
  "engines": {
    "node": "^20.10.0"
  }
}
