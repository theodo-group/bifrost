{
  "cli": "nx",
  "$id": "library-generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "Directory of the new library",
      "default": "packages"
    }
  },
  "required": ["name"]
}
